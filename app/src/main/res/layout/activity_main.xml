<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fitsSystemWindows="true">

    <!-- Top Status Bar (no title) -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1A1A1A"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Status Text -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Initializing..."
            android:textColor="#00E676"
            android:textSize="14sp"
            android:gravity="center"
            android:lineSpacingExtra="2dp"/>

        <!-- Performance Text (shows during restoration) -->
        <TextView
            android:id="@+id/performanceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#90CAF9"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:visibility="gone"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:indeterminate="true"
            android:indeterminateTint="#00E676"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- Image Comparison Viewer -->
    <androidx.cardview.widget.CardView
        android:id="@+id/comparisonCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/controlPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.panam.arm_hackthon.views.ImageComparisonSlider
            android:id="@+id/comparisonSlider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"/>
    </androidx.cardview.widget.CardView>

    <!-- Slider Instructions Overlay -->
    <TextView
        android:id="@+id/sliderInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="◀ Drag to compare ▶"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:textStyle="bold"
        android:background="#AA000000"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/controlPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:visibility="gone"/>

    <!-- Bottom Control Panel -->

    <!-- Hidden title (not displayed but referenced in MainActivity) -->
    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#1A1A1A"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:paddingEnd="16dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Primary Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectImageButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#2979FF"
            android:text="SELECT IMAGE"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:elevation="3dp" />

        <!-- Enhance and Restore Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/enhanceButton"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:backgroundTint="#00C853"
                android:enabled="false"
                android:text="QUICK ENHANCE"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/restoreButton"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:backgroundTint="#AA00FF"
                android:enabled="false"
                android:text="RESTORE IMAGE"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />
        </LinearLayout>

        <!-- Save Button (separate row) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="#FF6D00"
            android:enabled="false"
            android:text="SAVE"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="10dp" />

        <!-- Footer Info -->
        <TextView
            android:id="@+id/footerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="⚡ Powered by Arm NNAPI"
            android:textColor="#757575"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
